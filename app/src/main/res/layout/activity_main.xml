                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/avenirltstdmedium"
                            android:text="@string/sub_text9"
                            android:textColor="@color/sub_text_color"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardArt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5ssp"
                android:orientation="horizontal"
                app:cardCornerRadius="@dimen/_5ssp"
                app:cardElevation="@dimen/_3sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CardTranslator">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:src="@drawable/icon_art" />

                    <LinearLayout
                        android:layout_width="0dp"
