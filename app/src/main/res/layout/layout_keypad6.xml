<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

    <RelativeLayout
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/bottomlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relay_gif_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_gif"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relay_trans_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/keyboard_black_trans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#99000000"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:id="@+id/main_patti"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/top_bg6"
                            android:weightSum="10">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <LinearLayout
                                    android:id="@+id/btn_emoji"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/emojipressxmlwhite"
                                    android:gravity="center"
                                    android:orientation="horizontal" />

                                <LinearLayout
                                    android:id="@+id/btnTheme"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_toRightOf="@+id/btn_emoji"
                                    android:background="@drawable/themepressxmlwhite"
                                    android:gravity="center"
                                    android:orientation="horizontal" />

                                <LinearLayout
                                    android:id="@+id/changeLang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/btnTheme"
                                    android:background="@drawable/enable"
                                    android:gravity="center"
                                    android:orientation="horizontal" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <LinearLayout
                                    android:id="@+id/mainMenuLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center_vertical">

                                <Button
                                    android:id="@+id/btn_speaklang"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/btndropdown"
                                    android:background="@android:color/transparent"
                                    android:text="@string/str_speak_lang_2"
                                    android:textColor="@android:color/white" />

                                <ImageView
                                    android:id="@+id/btndropdown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:layout_toLeftOf="@+id/btnmic"
                                    android:background="@drawable/drop_down" />

                                <LinearLayout
                                    android:id="@+id/btnmic"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@+id/btn_setting"
                                    android:background="@drawable/mic_selector"
                                    android:gravity="center"
                                    android:orientation="horizontal" />

                                <LinearLayout
                                    android:id="@+id/btn_setting"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/settingpressxmlwhite"
                                    android:gravity="center"
                                    android:orientation="horizontal" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/hintword"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/top_bg6"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <com.theme.keyboardthemeapp.APPUtils.HorizontalListView
                                android:id="@+id/horizontalListView1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:divider="@drawable/divider" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rl_headertext"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/ic_header_bg0"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="8">

                        <ImageButton
                            android:id="@+id/emojis_tab_1_people"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/emoji_unpresedtheme0"
                            android:tag="0" />

                        <ImageButton
                            android:id="@+id/emojis_tab_1_flower"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/flower_unpresed0"
                            android:tag="1" />

                        <ImageButton
                            android:id="@+id/food_tab_1_emoji"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/flower_unpresed0"
                            android:tag="1" />

                        <ImageButton
                            android:id="@+id/emojis_tab_1_bell"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/bell_unpresed0"
                            android:tag="2" />

                        <ImageButton
                            android:id="@+id/emojis_tab_1_car"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/car_unpresed0"
                            android:tag="3" />

                        <ImageButton
                            android:id="@+id/emojis_tab_1_electronics"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/car_unpresed0"
                            android:tag="3" />

                        <ImageButton
                            android:id="@+id/emojis_tab_1_symbol"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/sign_unpresed0"
                            android:tag="4" />

                        <ImageButton
                            android:id="@+id/emojis_tab_1_delete"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_emoji_delete_light"
                            android:tag="5" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/contents1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_top"
                    android:layout_marginTop="-1dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/otherContents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/StickerContents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/stickerpatti"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@drawable/top_patti"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.theme.keyboardthemeapp.APPUtils.HorizontalListView
                                android:id="@+id/stickerList"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/moreButton" />

                            <ImageButton
                                android:id="@+id/moreButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/download_icon" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/stickerpatti"
                            android:background="@drawable/grid_bg"
                            android:orientation="horizontal">

                            <GridView
                                android:id="@+id/StickerGrid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_margin="3dp"
                                android:numColumns="3" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <com.theme.keyboardthemeapp.KeyboardView.CustomKeyboardView
                        android:id="@+id/keyboard"
                        style="@style/Widget.KeyboardView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:verticalCorrection="0dp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/speaklay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_speaklang1"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/drop_down"
                            android:text="Hindi"
                            android:textColor="#a4a4a4"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txttimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:13"
                            android:fontFamily="@font/monmedium"
                            android:textColor="#a4a4a4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btn_closedialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/dialog_close" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/speaktext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Tap to Speak!!"
                        android:textColor="#a4a4a4"
                        android:fontFamily="@font/monmedium"
                        android:textSize="19sp" />

                    <FrameLayout
                        android:id="@+id/flvoid"
                        android:layout_width="90dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/imgvoidon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/togglebutton_on" />

                        <ImageView
                            android:id="@+id/imgvoid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/clip_source" />

                        <ImageButton
                            android:id="@+id/btnspeech"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/togglebuttonbg"
                            android:visibility="visible" />

                        <ProgressBar
                            android:id="@+id/progressBarTalk"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginBottom="2dp"
                            android:keepScreenOn="true"
                            android:visibility="invisible" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
